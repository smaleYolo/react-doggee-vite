{
  "compilerOptions": {
    "target": "ES2020",
    "useDefineForClassFields": true,
    "lib": ["ES2020", "DOM", "DOM.Iterable"],
    "module": "ESNext",
    "skipLibCheck": true,

    /* Bundler mode */
    "moduleResolution": "bundler",
    "allowImportingTsExtensions": true,
    "resolveJsonModule": true,
    "isolatedModules": true,
    "noEmit": true,
    "jsx": "react-jsx",

    /* Linting */
    "strict": true,
    "noUnusedLocals": false, // Отключает предупреждения о неиспользуемых локальных переменных
    "noUnusedParameters": false, // Отключает предупреждения о неиспользуемых параметрах
    "noFallthroughCasesInSwitch": true,

    /* Aliases */
    "baseUrl": "./",
    "paths": {
      "@pages/*": ["src/pages/*"],
      "@common/*": ["src/common/*"]
    }
  },
  "include": ["src"],
  "references": [{ "path": "./tsconfig.node.json" }]
}

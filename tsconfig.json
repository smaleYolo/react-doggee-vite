{
  "compilerOptions": {
    "target": "ES2020",
    "useDefineForClassFields": true,
    "lib": ["ES2020", "DOM", "DOM.Iterable"],
    "module": "ESNext",
    "skipLibCheck": true,

    /* Bundler mode */
    "moduleResolution": "bundler",
    "allowImportingTsExtensions": true,
    "resolveJsonModule": true,
    "isolatedModules": true,
    "noEmit": true,
    "jsx": "react-jsx",

    /* Linting */
    "strict": true,
    "noUnusedLocals": false,
    "noUnusedParameters": false,
    "noFallthroughCasesInSwitch": true,

    /* Aliases */
    "baseUrl": "./",
    "paths": {
      "@pages/*": ["src/pages/*"],
      "@common/*": ["src/common/*"],
      "@buttons/*": ["src/common/buttons/*"],
      "@fields/*": ["src/common/fields/*"],
      "@inputs/*": ["src/common/fields/inputs/*"],
      "@static/*": ["src/static/*"],
      "@utils/*": ["src/utils/*"],
      "@contexts/*": ["src/utils/contexts/*"],
      "@helpers/*": ["src/utils/helpers/*"],
      "@api/*": ["src/utils/api/*"],
      "@hooks/*": ["src/hooks/*"],
      "@models/*": ["src/models/*"],
      "@features/*": ["src/features/*"],
    }
  },
  "include": ["src"],
  "references": [{ "path": "./tsconfig.node.json" }]
}
